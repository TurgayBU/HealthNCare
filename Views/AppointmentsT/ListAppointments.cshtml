@model IEnumerable<AppointmentViewModel>

@{
    ViewData["Title"] = "Randevularım";
}

<h2>Randevularım</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Doktor</th>
            <th>Bölüm</th>
            <th>Hastane</th>
            <th>Konum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.SelectedDate</td>
                <td>@appointment.SelectedTime</td>
                <td>@appointment.SelectedDoctor</td>
                <td>@appointment.SelectedDepartment</td>
                <td>@appointment.SelectedHospital</td>
                <td>@appointment.SelectedLocation</td>
            </tr>
        }
    </tbody>
</table>
