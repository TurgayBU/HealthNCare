<style>
</style>
<div class="text-center">
    <h1 style="color: white;" class="display-4">HealthNCare</h1>
    <div class="container p-5 my-5 bg-light text-info" style="border-radius: 8px;">
        <p style="color: white;">
            <a asp-controller="Appointments" asp-action="SelectLocation" class="btn btn-info btn-create">Create Appointment</a>
        </p>
    </div>
    <div class="container p-5 my-5 bg-info text-white" style="border-radius: 8px;">
        <p>
            Created Appointments
        </p>
        <p>
            <a asp-controller="Appointments" asp-action="ListAppointments" class="btn btn-primary">My Appointments</a>
        </p>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
</div>
