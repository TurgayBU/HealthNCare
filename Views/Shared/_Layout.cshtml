<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]HealthNCare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HealthNCare.styles.css" asp-append-version="true" />
    <style>
        a:hover{background-color: aquamarine; border-radius: 15px;}
        a:link{border-radius: 15px; }
        body{background-repeat: no-repeat;background-attachment: fixed;background-size: cover;
            background-image: url(/images/modern-healthcare-approach-doctors-using-tablets-records.jpg);}
            h1{color: white;}
            h2{color: white;}
            h3{color: white;}
            h4{color: white;}
            h5{color: white;}
            h6{color: white;}
            div{color: white;}
            table{color: white;}
            thead{color: white;}
            tbody{color: white;}
            td{color: white;}
    </style>
   
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" >
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/images/HealthNCareLogo.png" alt="HeathNCare Logo" style="width: 125px;height:75;">
               </a>
            <div class="container-fluid">
           
               
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navba~-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a  class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fa-solid fa-house-chimney"></i>Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Treatment" asp-action="Sign">Sign In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Treatment" asp-action="Apply">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Languages">Languages</a>
                        </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div style="margin: auto;" class="container">
            -HealthNCare For Your Appoinments-
            <!-- &copy; 2024 - HealthNCare - -->
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
