@model List<Doctor>

<form asp-action="SelectDoctor" method="post">
    <h3>Doctor:</h3>
    <select id="doctor" class="form-select" name="selectedDoctorId" required>
        @foreach (var doctor in Model)
        {
            <option value="@doctor.DoctorId">@doctor.Name</option>
        }
    </select>
    <br>
    <button class="btn btn-primary" type="submit">Continue</button>
</form>
